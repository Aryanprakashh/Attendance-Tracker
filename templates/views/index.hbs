    <script>
        // Wait for DOM to be fully loaded
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, setting up Learn More button...');
            
            // Find the Learn More button using multiple selectors
            const learnMoreBtn = document.getElementById('learnMoreBtn') || document.querySelector('a[href="#second"]');
            const targetSection = document.getElementById('second');
            
            console.log('Learn More button found:', learnMoreBtn);
            console.log('Target section found:', targetSection);
            
            if (learnMoreBtn && targetSection) {
                // Add click event listener
                learnMoreBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    console.log('Learn More button clicked!');
                    
                    // Calculate target position
                    const targetPosition = targetSection.offsetTop;
                    console.log('Target position:', targetPosition);
                    
                    // Use smooth scrolling with fallback
                    if ('scrollBehavior' in document.documentElement.style) {
                        console.log('Using scrollIntoView with smooth behavior');
                        targetSection.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    } else {
                        console.log('Using window.scrollTo with smooth behavior');
                        // Fallback for older browsers
                        window.scrollTo({
                            top: targetPosition,
                            behavior: 'smooth'
                        });
                    }
                });
                
                // Also add a simple test click to verify the button is clickable
                learnMoreBtn.addEventListener('click', function(e) {
                    console.log('Button is clickable!');
                });
                
                console.log('Learn More button event listener added successfully');
            } else {
                console.error('Learn More button or target section not found');
                if (!learnMoreBtn) console.error('Learn More button not found');
                if (!targetSection) console.error('Target section #second not found');
            }
        });
